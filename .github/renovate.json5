{
  extends: [
    "config:recommended",
    "group:allNonMajor",
    "schedule:weekly"
  ],
  lockFileMaintenance: {
    enabled: true
  },
  // target chore/next branch
  baseBranchPatterns: [
    "chore/next"
  ],
  // only 1 PR at the same time (to avoid cascading rebase)
  prConcurrentLimit: 1,
  // auto-merge if build is OK
  automerge: true,
  packageRules: [
    // allow only patch and minor updates for elasticsearch docker image
    {
      matchPackageNames: [
        "docker.elastic.co/elasticsearch/elasticsearch"
      ],
      matchUpdateTypes: [
        "major"
      ],
      enabled: false
    },
    // allow only patch updates for TS packages
    {
      matchPackageNames: [
        "typescript"
      ],
      matchUpdateTypes: [
        "minor",
        "major"
      ],
      enabled: false
    }
  ],
  ignoreDeps: [
    // do not bump openjdk images on CIs as we'll manually handle the JDK bumps
    "cimg/openjdk",
    "circleci/openjdk"
  ]
}
